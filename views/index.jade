extends layout

block scripts
  script(src='/javascripts/animate.js')
  script(src='/javascripts/global.js')

block content
  .container-fluid.text-center
    .h1#header KHLOES SLIMES
    .row
      .col-12
        .carousel.slide#carouselIndicators(data-ride="carousel")
          ol.carousel-indicators
            li.active(data-target="#carouselIndicators", data-slide-to="0")
            li(data-target="#carouselIndicators", data-slide-to="1")
            li(data-target="#carouselIndicators", data-slide-to="2")
          .carousel-inner
            .carousel-item.active
              img.d-block.w-100(src="/images/slime.png", alt="First slide")
            .carousel-item
              img.d-block.w-100(src="/images/slimeSupplies.jpg", alt="Second slide")
            .carousel-item
              img.d-block.w-100(src="...", alt="Third slide")
          a.carousel-control-prev(href="#carouselIndicators", role="button", data-slide="prev")
            span.carousel-control-prev-icon(aria-hidden="true")
            span.sr-only Previous
          a.carousel-control-next(href="#carouselIndicators", role="button", data-slide="next")
            span.carousel-control-next-icon(aria-hidden="true")
            span.sr-only Next
  .container.content.text-center
    h2.title The Parts of a Slime
      hr
    .row
      .col-12.card-deck
        .card.trigger
          img.card-img-top.img-fluid(src="/images/blueSequin_sm.jpg")
          .card-body
            h5.card-title Texture
            p.card-text We have all sorts of different feeling slimes, floam slimes with foam beads, crunchy slimes with sequins, and regular squishy slimey slimes.
        .card.trigger
          img.card-img-top.img-fluid(src="/images/fishTube_sm.jpg")
          .card-body
            h5.card-title Composition
            p.card-text Every slime we make is hand made and unique. Our slimes use all sorts of ingredients for a different feel, glue, baking soda, borax, activator, shaving cream.
        .card.trigger
          img.card-img-top.img-fluid(src="/images/pinkGlitter_sm.jpg")
          .card-body
            h5.card-title Color
            p.card-text Our slimes come in all sorts of colors, glittery sparkling slimes, color-changing slimes, glow in the dark slimes and clear slimes.
